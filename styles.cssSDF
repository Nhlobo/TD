/* Global Base Styles */
:root {
  --light-gray: #f8f8f8;
  --dark-blue-gray: #1e293b;
  --dark-gray: #374151;
  --light-gray-text: #444;
  --button-blue: #00b0ff;
  --button-blue-hover: #0088cc;
  --button-blue-active: #006f99;
  --shadow: rgba(0, 0, 0, 0.1);
  --focus-border: #00b0ff;
}

/* Base Styles for All Sections */
section {
  background: #ffffff; /* Removed gradient, set to plain white */
  border-radius: 12px;
  box-shadow: 0 8px 32px var(--shadow);
  padding: 2rem 1rem;
}

h1, .section-title {
  font-size: 2rem;
  font-weight: 600;
  color: var(--dark-blue-gray);
  margin-bottom: 1.5rem;
}

h4, p {
  font-size: 1rem;
  color: var(--dark-gray);
}
/* Testimonials Section */
#testimonials {
  padding: 2rem 0.5rem;
  text-align: center;
}

.testimonials-container {
  display: flex;
  overflow-x: auto;
  gap: 1rem;
  scroll-snap-type: x mandatory;
  padding: 0 10px;
  margin: 0 auto;
  max-width: 90%;
}

.card {
  background: #ffffff; /* Solid white background */
  box-shadow: 0 8px 32px var(--shadow);
  border-radius: 12px;
  padding: 2rem;
  text-align: center;
  flex-shrink: 0;
  width: 250px;
  margin: 1rem;
  color: #111827;
  position: relative; /* To position the stars inside the card */
}

/* Style the rating stars and position them at the top left */
.rating {
  position: absolute;
  top: 10px;
  left: 10px;
  display: flex;
  gap: 5px;
  z-index: 10;
}

.rating label {
  font-size: 24px; /* Adjust the size for visibility */
  color: #ddd; /* Gray for empty stars */
  cursor: pointer;
}

.rating label:hover {
  color: #ff9800; /* Optional: change color when hovered */
}

/* Make filled stars gold */
.rating label:nth-child(-n+5) {
  color: #ff9800; /* Gold color for filled stars */
}

/* Round the testimonial images */
.testimonial-img {
  width: 40px; /* Small size for the images */
  height: 40px;
  border-radius: 50%;
  border: 2px solid #fff;  /* Optional: white border around the image */
  margin-top: 10px;
  object-fit: cover; /* Ensures image remains clear and doesn't stretch */
}

/* Style the testimonial text */
.title {
  font-size: 1.1rem;
  font-style: italic;
  margin-bottom: 1rem;
  color: var(--dark-gray);
}

@media (min-width: 768px) {
  .testimonials-container {
    gap: 1rem;
  }
}
/* FAQ Section */
.faq-section {
  margin: 50px auto;
  max-width: 800px;
  padding: 2rem;
  text-align: center;
}

.faq-container {
  display: flex;
  flex-direction: column;
  gap: 20px;
}

.faq-item {
  background: #ffffff; /* Changed from semi-transparent to solid white */
  border-radius: 12px;
  box-shadow: 0 4px 8px var(--shadow);
  overflow: hidden;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.faq-item:hover {
  transform: translateY(-3px);
  box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
}

.faq-item h3 {
  padding: 20px;
  font-size: 1.2rem;
  font-weight: 500;
  cursor: pointer;
  background: #ffffff; /* Changed from semi-transparent to solid white */
  margin: 0;
  transition: background 0.3s ease;
}

.faq-item h3:hover {
  background: #f0f0f0; /* Light background color */
}

.faq-item h3::after {
  content: "+";
  font-size: 1.5rem;
  float: right;
  color: var(--button-blue);
  transition: transform 0.3s ease;
}

.faq-item.active h3::after {
  transform: rotate(45deg);
}

.faq-item p {
  max-height: 0;
  overflow: hidden;
  padding: 0 20px;
  font-size: 1rem;
  color: var(--dark-gray);
  background: #ffffff; /* Changed from semi-transparent to solid white */
  border-top: 1px solid #ccc;
  transition: max-height 0.3s ease, padding 0.3s ease;
}

.faq-item.active p {
  max-height: 100px;
  padding: 15px 20px;
}

/* Contact Section */
.contact {
  background: #f0f4f8; /* Solid light gray background instead of gradient */
  padding: 60px 20px;
  border-radius: 12px; /* Rounded corners */
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1); /* Subtle shadow for depth */
}

.contact-container {
  max-width: 800px;
  margin: 0 auto;
  padding: 40px;
  background: #ffffff; /* Solid white background instead of semi-transparent */
  border-radius: 12px; /* Rounded corners */
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
}

.contact h1 {
  text-align: center;
  font-size: 32px;
  font-weight: 600;
  margin-bottom: 20px;
  color: #333;
}

.contact-form {
  display: flex;
  flex-direction: column;
  gap: 20px;
}

.form-group {
  display: flex;
  flex-direction: column;
}

label {
  font-size: 14px;
  color: #444;
  margin-bottom: 5px;
}

input,
textarea {
  width: 100%;
  padding: 12px 15px;
  border: 1px solid #ddd;
  border-radius: 5px;
  font-size: 16px;
  transition: all 0.3s ease;
}

input:focus,
textarea:focus {
  border-color: #00b0ff;
  outline: none;
}

textarea {
  resize: vertical;
}

button {
  background-color: #00b0ff;
  color: white;
  border: none;
  padding: 14px 20px;
  border-radius: 8px;
  font-size: 16px;
  cursor: pointer;
  transition: background-color 0.3s ease;
}

button:hover {
  background-color: #0088cc;
}

button:active {
  background-color: #006f99;
}

.checkbox-group {
  display: flex;
  align-items: center;
  gap: 10px;
}

.checkbox-group input {
  width: auto;
}

a {
  color: #00b0ff;
  text-decoration: none;
  transition: color 0.3s ease;
}

a:hover {
  color: #0088cc;
}

/* Loader */
#loader {
  text-align: center;
  margin-top: 20px;
}

#loader img {
  width: 50px;
  height: auto;
}

.success-message {
  color: #28a745;
  background: rgba(40, 167, 69, 0.1);
  padding: 10px;
  border-radius: 5px;
}

.error-message {
  color: #dc3545;
  background: rgba(220, 53, 69, 0.1);
  padding: 10px;
  border-radius: 5px;
}

#response {
  display: none;
  margin-top: 20px;
  font-size: 14px;
  text-align: center;
}
/* Footer Styles */
footer {
  text-align: center;
  padding: 20px;
  background: #f8f8f8; /* Light gray instead of gradient */
  color: #666;
  font-size: 14px;
}

.wrapper {
  display: flex;
  justify-content: center;
  gap: 20px;
  padding: 20px 0;
  list-style: none;
  flex-wrap: wrap;
}

.wrapper .icon {
  width: 3em;
  height: 3em;
  display: flex;
  justify-content: center;
  align-items: center;
  background: white;
  border-radius: 50%;
  box-shadow: 0 5px 10px var(--shadow);
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.wrapper .icon:hover {
  transform: translateY(-5px);
  box-shadow: 0 8px 15px rgba(0, 0, 0, 0.2);
}

.tooltip {
  position: absolute;
  top: -40px;
  background: #333;
  color: white;
  font-size: 0.9em;
  padding: 5px 10px;
  border-radius: 5px;
  opacity: 0;
  pointer-events: none;
  transform: translateY(10px);
  transition: opacity 0.3s ease, transform 0.3s ease;
}

.icon:hover .tooltip {
  opacity: 1;
  transform: translateY(0);
}

.tooltip::before {
  content: '';
  position: absolute;
  bottom: -5px;
  left: 50%;
  transform: translateX(-50%);
  border-width: 5px;
  border-style: solid;
  border-color: #333 transparent transparent transparent;
}

/* Social Media Icon Colors */
.facebook:hover { background: #1877f2; color: #fff; }
.twitter:hover { background: #1da1f2; color: #fff; }
.instagram:hover { background: #e4405f; color: #fff; }

/* Footer Links */
.footer-links {
  margin-top: 15px;
  font-size: 14px;
}

.footer-links a {
  color: #666;
  text-decoration: none;
  margin: 0 10px;
}

.footer-links a:hover {
  color: var(--dark-blue-gray);
}

/* Responsive Design */
@media (max-width: 768px) {
  .contact-container,
  .testimonials-container {
    padding: 20px;
  }

  .contact h1 {
    font-size: 24px;
  }

  input,
  textarea {
    font-size: 14px;
    padding: 10px;
  }

  button {
    padding: 12px 16px;
    font-size: 14px;
  }
}
